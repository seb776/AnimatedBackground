<Window x:Class="DrawBehindDesktopIconsController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawBehindDesktopIconsController"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ComboBox VerticalAlignment="Top" HorizontalAlignment="Left" SelectedIndex="0">
            <ComboBoxItem>1/1</ComboBoxItem>
            <ComboBoxItem>1/2</ComboBoxItem>
            <ComboBoxItem>1/4</ComboBoxItem>
            <ComboBoxItem>1/8</ComboBoxItem>
        </ComboBox>
        <ComboBox>
            <ComboBoxItem>Shader1</ComboBoxItem>
            <ComboBoxItem>Shader2</ComboBoxItem>
            <ComboBoxItem>Shader3</ComboBoxItem>
            <!--depending on selected shader expose variables so user can tweak them-->
        </ComboBox>
        <RadioButton>Refresh rate</RadioButton>
        <RadioButton>Refresh on this value change</RadioButton>
        <Button>Apply</Button>
    </StackPanel>
</Window>
